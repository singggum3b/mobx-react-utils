{
  "extends": ["tslint:latest", "tslint-react"],
  "defaultSeverity": "error",
  "rules": {
    "ordered-imports": false,
    "no-console": ["log"],
    "semicolon": false,
    "max-classes-per-file": [false],
    "no-submodule-imports": [true, "redux-saga", "normalize.css", "mobx"],
    "arrow-parens": ["ban-single-arg-parens"],
    "no-this-assignment": [true, { "allow-destructuring": true }],
    "object-literal-sort-keys": false,
    "typedef": [true, "call-signature", "arrow-call-signature"],
    "no-unused-expression": [true, "allow-fast-null-checks"],
    "no-unused-variable": true,
    "ban": [true, {"name": ["Object", "assign"], "message": "Not typesafe, use copyFields utils instead"}],
    "indent": ["tab"],
    "jsx-no-multiline-js": false,
    "jsx-alignment": false
  },
  "linterOptions": {
    "exclude": [
      "**/*.sass.*"
    ]
  }
}